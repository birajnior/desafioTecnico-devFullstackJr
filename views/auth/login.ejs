<div class="container-login">
    <img src="/img/logo.png" alt="" class="img-logo">
    <section>
        <form action="/login" method="POST">
            <h1>Login</h1>
            <p>Boas-vindas! Faça seu login.</p>

            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" placeholder="Digite seu e-mail" class="form-control"
                    required />
            </div>

            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" id="senha" name="senha" placeholder="Digite sua senha" class="form-control"
                    required />
            </div>

            <button type="submit" class="btn btn-success w-100">Login</button>
        </form>

        <div class="container-links mt-4 text-center">
            <p class="container-links__texto">Ainda não tem conta?</p>
            <a href="/register">Crie seu cadastro!</a>
        </div>
    </section>
</div>