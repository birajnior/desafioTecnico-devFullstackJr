<div class="dashboard-container">
    <h1 class="mb-4">Lista de Produtos</h1>

    <div class="mb-3 d-flex">
        <form class="d-flex flex-grow-1 me-2">
            <input type="text" name="q" class="form-control me-2" placeholder="Buscar produto por nome">
            <button type="submit" class="btn btn-success">Buscar</button>
        </form>

        <a href="/products/new" class="btn btn-primary ms-2">Cadastrar Produto</a>
    </div>

    <div class="row">
        <% if (produtos.length===0) { %>
            <p class="text-center">Nenhum produto cadastrado ainda.</p>
            <% } else { %>
                <% produtos.forEach(produto=> { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm bg-dark text-light">
                            <div class="card-body d-flex flex-column">

                                <h5 class="card-title text-success">
                                    <%= produto.nome %>
                                </h5>

                                <h6 class="card-text mb-2">
                                    Pre√ßo: R$ <%= produto.preco ? produto.preco.toFixed(2) : "0.00" %>
                                </h6>

                                <p class="card-text flex-grow-1">
                                    <%= produto.descricao %><br>
                                        <strong>Quantidade:</strong>
                                        <%= produto.quantidade %>
                                </p>

                                <div class="mt-auto d-flex justify-content-between">
                                    <% if (user && (user.ehAdmin || user.ehSupervisor)) { %>
                                        <button class="btn btn-sm btn-primary"
                                            onclick="editProduct('<%= produto.id %>')">Editar</button>
                                        <button class="btn btn-sm btn-danger"
                                            onclick="deleteProduct('<%= produto.id %>')">Excluir</button>
                                        <% } %>
                                </div>

                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } %>
    </div>
</div>

<script>
    const produtosList = JSON.parse('<%- JSON.stringify(produtos) %>');
</script>
<script src="/js/scriptList.js"></script>