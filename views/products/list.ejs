<div class="dashboard-container">
    <h1 class="mb-4">Lista de Produtos</h1>

    <div class="mb-3">
        <form action="/products/search" method="GET" class="d-flex">
            <input type="text" name="q" class="form-control me-2" placeholder="Buscar produto por nome">
            <button type="submit" class="btn btn-success">Buscar</button>
        </form>
    </div>

    <div class="row">
        <% if (produtos.length===0) { %>
            <p class="text-center">Nenhum produto cadastrado ainda.
                <a href="/products/new" class="btn btn-outline-success btn-sm ms-2">Cadastrar produto</a>
            </p>
            <% } else { %>
                <% produtos.forEach(produto=> { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm bg-dark text-light">
                            <div class="card-body d-flex flex-column">

                                <h5 class="card-title text-success">
                                    <%= produto.nome %>
                                </h5>

                                <h6 class="card-subtitle mb-2 text-muted">
                                    Pre√ßo: R$ <%= produto.preco %>
                                </h6>

                                <p class="card-text flex-grow-1">
                                    <%= produto.descricao %><br>
                                        <strong>Quantidade:</strong>
                                        <%= produto.quantidade %>
                                </p>

                                <% if (user && user.role==="Supervisor" ) { %>
                                    <div class="mt-auto d-flex justify-content-between">
                                        <a href="/products/<%= produto.id %>/edit" class="btn btn-sm btn-edit">
                                            Editar
                                        </a>
                                        <form action="/products/<%= produto.id %>?_method=DELETE" method="POST"
                                            onsubmit="return confirm('Deseja realmente excluir este produto?')">
                                            <button type="submit" class="btn btn-sm btn-delete">
                                                Excluir
                                            </button>
                                        </form>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } %>
    </div>
</div>