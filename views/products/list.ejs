<h1 class="mb-4 text-center">Produtos</h1>

<% if (!user) { %>
    <div class="alert alert-warning text-center" role="alert">
        Faça login para visualizar os produtos.
    </div>
    <% } else { %>
        <div class="mb-3 d-flex align-items-center">
            <form method="GET" action="/products" class="d-flex w-100">
                <input type="text" name="search" placeholder="Buscar produto..." class="form-control me-2"
                    value="<%= typeof search !== 'undefined' ? search : '' %>">
                <button class="btn btn-buscar">Buscar</button>
            </form>

            <% if (!user.ehSupervisor && !user.ehAdmin) { %>
                <!-- Analista pode adicionar -->
                <a href="/products/new" class="btn btn-success">Cadastrar Produto</a>
                <% } else { %>
                    <!-- Supervisor/Admin podem adicionar também -->
                    <a href="/products/new" class="btn btn-success">Cadastrar Produto</a>
                    <% } %>
        </div>

        <% if (produtos.length===0) { %>
            <div class="alert alert-info text-center">
                Nenhum produto cadastrado.
            </div>
            <% } else { %>
                <table class="table table-dark table-striped text-center align-middle rounded-3 shadow-sm">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Preço (R$)</th>
                            <th>Quantidade</th>
                            <th>Data Criação</th>
                            <th>Cadastrado por</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% produtos.forEach(prod=> { %>
                            <tr>
                                <td>
                                    <%= prod.nome %>
                                </td>
                                <td>
                                    <%= prod.descricao %>
                                </td>
                                <td>
                                    <%= prod.preco.toFixed(2) %>
                                </td>
                                <td>
                                    <%= prod.quantidade %>
                                </td>
                                <td>
                                    <%= prod.createdAt.toLocaleDateString("pt-BR") %>
                                </td>
                                <td>
                                    <%= prod.usuario ? prod.usuario.nome : "Desconhecido" %>
                                </td>
                                <td>
                                    <% if (user.ehSupervisor || user.ehAdmin) { %>
                                        <div class="d-flex">
                                            <a href="/products/<%= prod.id %>/edit"
                                                class="btn btn-sm btn-outline-warning me-2">Editar</a>
                                            <form action="/products/<%= prod.id %>?_method=DELETE" method="POST"
                                                class="d-inline">
                                                <button type="submit"
                                                    class="btn btn-sm btn-outline-danger">Excluir</button>
                                            </form>
                                        </div>
                                        <% } else { %>
                                            <span class="text-muted">Sem permissão</span>
                                            <% } %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } %>
                    <% } %>