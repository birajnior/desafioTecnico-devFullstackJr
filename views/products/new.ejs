<h1 class="mb-4">Cadastrar Produto</h1>

<form id="form-produto" class="w-75 mx-auto">
    <div class="mb-3">
        <label for="nome" class="form-label">Nome do Produto</label>
        <input type="text" id="nome" name="nome" class="form-control" required>
    </div>

    <div class="mb-3">
        <label for="descricao" class="form-label">Descrição</label>
        <textarea id="descricao" name="descricao" rows="3" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label for="preco" class="form-label">Preço (R$)</label>
        <input type="number" id="preco" name="preco" step="0.01" class="form-control" required>
    </div>

    <div class="mb-3">
        <label for="quantidade" class="form-label">Quantidade</label>
        <input type="number" id="quantidade" name="quantidade" class="form-control" required>
    </div>

    <div class="d-grid">
        <button class="btn btn-success" type="submit">Salvar Produto</button>
    </div>
</form>

<script src="/js/scriptProduct.js"></script>